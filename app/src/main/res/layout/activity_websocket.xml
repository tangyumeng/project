<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WebSocket协议学习"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/design_default_color_primary" />

        <!-- WebSocket连接控制区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WebSocket 连接"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/et_websocket_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="WebSocket服务器地址"
                    android:text="wss://echo.websocket.org"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btn_ws_connect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="连接"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_ws_disconnect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="断开"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_ws_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="状态：未连接"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 消息发送区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发送消息"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/et_ws_message"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="输入要发送的消息"
                    android:text="Hello WebSocket Server!"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_ws_send_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="发送文本"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_ws_send_json"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="发送JSON"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_ws_ping"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ping"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 消息历史显示区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="消息历史"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_clear_log"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清空"
                        android:textSize="12sp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="8dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_message_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="消息数量：0"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <TextView
                        android:id="@+id/tv_ws_log"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="WebSocket消息日志将在这里显示...\n\n连接后可以发送消息测试双向通信功能。"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:background="@color/design_default_color_background"
                        android:padding="8dp" />

                </ScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- WebSocket特性说明 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WebSocket 协议特性"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ 全双工通信：客户端和服务器可以同时发送数据\n✓ 实时性：低延迟的实时数据传输\n✓ 持久连接：一次握手，持续通信\n✓ 协议升级：从HTTP协议升级而来\n✓ 跨域支持：支持跨域通信\n✓ 二进制支持：支持文本和二进制数据\n\n适用场景：\n• 在线聊天应用\n• 实时游戏\n• 股票价格推送\n• 协作编辑\n• 实时监控系统"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
