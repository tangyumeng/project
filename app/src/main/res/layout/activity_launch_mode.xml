<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".LaunchModeActivity">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android LaunchMode详解"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp"
        android:elevation="2dp" />

    <!-- 当前任务信息 -->
    <TextView
        android:id="@+id/tv_task_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="任务栈信息"
        android:textSize="12sp"
        android:textColor="#333333"
        android:background="#E3F2FD"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="monospace" />

    <!-- LaunchMode演示按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="四种LaunchMode演示"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_standard_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Standard"
                android:textColor="@android:color/white"
                android:background="#FF9800"
                android:layout_marginEnd="4dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_single_top_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SingleTop"
                android:textColor="@android:color/white"
                android:background="#4CAF50"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_single_task_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SingleTask"
                android:textColor="@android:color/white"
                android:background="#9C27B0"
                android:layout_marginStart="4dp"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_single_instance_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SingleInstance"
                android:textColor="@android:color/white"
                android:background="#FF5722"
                android:layout_marginEnd="4dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_launch_flags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Intent Flags"
                android:textColor="@android:color/white"
                android:background="#795548"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_task_stack_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="任务栈信息"
                android:textColor="@android:color/white"
                android:background="#607D8B"
                android:layout_marginStart="4dp"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_task_affinity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TaskAffinity"
                android:textColor="@android:color/white"
                android:background="#4CAF50"
                android:layout_marginEnd="8dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清空结果"
                android:textColor="@android:color/white"
                android:background="#424242"
                android:layout_marginStart="8dp"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 结果显示区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="演示结果"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:padding="16dp"
            android:background="#F0F0F0" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/tv_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#333333"
                android:lineSpacingExtra="3dp"
                android:fontFamily="monospace"
                android:text=""
                tools:text="这里会显示LaunchMode的详细演示结果..." />

        </ScrollView>

    </LinearLayout>

    <!-- 底部提示 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💡 提示：LaunchMode是Android任务栈管理的核心机制"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="#FFF3E0" />

</LinearLayout>
