<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 权限声明 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 网络协议学习相关权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project"
        tools:targetApi="31">
        
        <!-- 主Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Project">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity生命周期演示 -->
        <activity
            android:name=".LifecycleActivity"
            android:exported="true"
            android:label="Activity生命周期演示" />

        <!-- ContentProvider测试Activity -->
        <activity
            android:name=".ContentProviderTestActivity"
            android:exported="true"
            android:label="ContentProvider演示" />

        <!-- BroadcastReceiver测试Activity -->
        <activity
            android:name=".BroadcastTestActivity"
            android:exported="true"
            android:label="BroadcastReceiver测试" />

        <!-- 网络协议学习Activity -->
        <activity
            android:name=".NetworkProtocolActivity"
            android:exported="true"
            android:label="网络协议学习" />

        <!-- HTTP协议示例Activity -->
        <activity
            android:name=".HttpProtocolActivity"
            android:exported="true"
            android:label="HTTP协议示例" />

        <!-- TCP/UDP协议示例Activity -->
        <activity
            android:name=".SocketProtocolActivity"
            android:exported="true"
            android:label="TCP/UDP Socket示例" />

        <!-- WebSocket协议示例Activity -->
        <activity
            android:name=".WebSocketActivity"
            android:exported="true"
            android:label="WebSocket协议示例" />

        <!-- 深拷贝vs浅拷贝演示Activity -->
        <activity
            android:name=".CopyDemoActivity"
            android:exported="true"
            android:label="深拷贝vs浅拷贝演示" />

        <!-- 性能优化策略演示Activity -->
        <activity
            android:name=".PerformanceOptimizationActivity"
            android:exported="true"
            android:label="性能优化策略演示" />

        <!-- Java泛型类型擦除演示Activity -->
        <activity
            android:name=".JavaGenericsActivity"
            android:exported="true"
            android:label="Java泛型类型擦除演示" />

        <!-- Java变量生命周期演示Activity -->
        <activity
            android:name=".JavaVariableLifecycleActivity"
            android:exported="true"
            android:label="Java变量生命周期演示" />

        <!-- String.length()原理演示Activity -->
        <activity
            android:name=".StringLengthActivity"
            android:exported="true"
            android:label="String.length()原理演示" />

        <!-- Activity与Fragment通信演示Activity -->
        <activity
            android:name=".ActivityFragmentCommunicationActivity"
            android:exported="true"
            android:label="Activity与Fragment通信演示" />

        <!-- LaunchMode演示Activity -->
        <activity
            android:name=".LaunchModeActivity"
            android:exported="true"
            android:label="LaunchMode详解演示" />

        <!-- Standard模式Activity -->
        <activity
            android:name=".StandardModeActivity"
            android:exported="true"
            android:launchMode="standard"
            android:label="Standard模式演示" />

        <!-- SingleTop模式Activity -->
        <activity
            android:name=".SingleTopModeActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:label="SingleTop模式演示" />

        <!-- SingleTask模式Activity -->
        <activity
            android:name=".SingleTaskModeActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:label="SingleTask模式演示" />

        <!-- SingleInstance模式Activity -->
        <activity
            android:name=".SingleInstanceModeActivity"
            android:exported="true"
            android:launchMode="singleInstance"
            android:label="SingleInstance模式演示" />

        <!-- TaskAffinity演示Activity -->
        <activity
            android:name=".TaskAffinityDemoActivity"
            android:exported="true"
            android:taskAffinity="com.modelbest.project.demo"
            android:launchMode="singleTask"
            android:label="TaskAffinity演示" />

        <!-- 另一个TaskAffinity演示Activity -->
        <activity
            android:name=".AnotherAffinityActivity"
            android:exported="true"
            android:taskAffinity="com.modelbest.project.another"
            android:launchMode="singleTop"
            android:label="另一个TaskAffinity演示" />

        <!-- Android Context详解演示Activity -->
        <activity
            android:name=".AndroidContextActivity"
            android:exported="true"
            android:label="Android Context详解演示" />

        <!-- IntentFilter详解演示Activity -->
        <activity
            android:name=".IntentFilterActivity"
            android:exported="true"
            android:label="IntentFilter详解演示" />

        <!-- Service对比演示Activity -->
        <activity
            android:name=".ServiceComparisonActivity"
            android:exported="true"
            android:label="startService vs bindService演示" />

        <!-- RecyclerView性能优化演示Activity -->
        <activity
            android:name=".RecyclerViewOptimizationActivity"
            android:exported="true"
            android:label="RecyclerView性能优化演示" />

        <!-- 多ViewType演示Activity -->
        <activity
            android:name=".demo.MultiViewTypeActivity"
            android:exported="true"
            android:label="RecyclerView多ViewType详解" />

        <!-- 内存泄漏演示Activity -->
        <activity
            android:name=".demo.MemoryLeakDemoActivity"
            android:exported="true"
            android:label="Android内存泄漏详解" />

        <!-- Handler内存泄漏专题Activity -->
        <activity
            android:name=".demo.HandlerMemoryLeakDemo"
            android:exported="true"
            android:label="Handler内存泄漏专题" />

        <!-- Service组件 -->
        <service
            android:name=".DemoService"
            android:enabled="true"
            android:exported="false" />

        <!-- BroadcastReceiver组件 -->
        <receiver
            android:name=".DemoBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <!-- 自定义广播和一些系统广播 -->
            <intent-filter android:priority="1000">
                <action android:name="com.modelbest.project.CUSTOM_BROADCAST" />
                <action android:name="android.intent.action.BATTERY_LOW" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            
            <!-- 应用包相关广播需要单独的intent-filter -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- ContentProvider组件 -->
        <provider
            android:name=".DemoContentProvider"
            android:authorities="com.modelbest.project.provider"
            android:enabled="true"
            android:exported="true"
            android:readPermission="android.permission.READ_EXTERNAL_STORAGE"
            android:writePermission="android.permission.WRITE_EXTERNAL_STORAGE" />

        <receiver android:name=".CustomReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="TODO"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.modelbest.project.MY_BROADCAST"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>