<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TCP/UDP Socket协议学习"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/design_default_color_primary" />

        <!-- TCP Socket测试区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TCP Socket 客户端"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/et_tcp_host"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="服务器地址"
                    android:text="echo.websocket.org"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_tcp_port"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="端口号"
                    android:text="80"
                    android:inputType="number"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_tcp_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="要发送的消息"
                    android:text="Hello TCP Server!"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btn_tcp_connect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="连接"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_tcp_send"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="发送"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_tcp_disconnect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="断开"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_tcp_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TCP状态：未连接"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TCP消息日志："
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <TextView
                        android:id="@+id/tv_tcp_log"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TCP连接日志将在这里显示..."
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:background="@color/design_default_color_background"
                        android:padding="8dp" />

                </ScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- UDP Socket测试区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UDP Socket 客户端"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/et_udp_host"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="服务器地址"
                    android:text="8.8.8.8"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_udp_port"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="端口号"
                    android:text="53"
                    android:inputType="number"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_udp_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="要发送的消息"
                    android:text="Hello UDP Server!"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btn_udp_send"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="发送UDP包"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_udp_ping"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ping测试"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_udp_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UDP状态：就绪"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UDP消息日志："
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <TextView
                        android:id="@+id/tv_udp_log"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="UDP通信日志将在这里显示..."
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:background="@color/design_default_color_background"
                        android:padding="8dp" />

                </ScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 协议对比说明 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TCP vs UDP 协议对比"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TCP (传输控制协议)：\n• 面向连接的可靠传输\n• 保证数据顺序和完整性\n• 适用于文件传输、网页浏览等\n• 有连接建立和断开过程\n\nUDP (用户数据报协议)：\n• 无连接的快速传输\n• 不保证数据到达和顺序\n• 适用于视频流、游戏等实时应用\n• 传输开销小，速度快"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
