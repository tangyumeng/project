<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HTTP协议学习示例"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/design_default_color_primary" />

        <!-- HTTP请求测试区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HTTP请求测试"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/et_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入URL (如: https://httpbin.org/get)"
                    android:text="https://httpbin.org/get"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btn_get_request"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GET"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_post_request"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="POST"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp" />

                    <Button
                        android:id="@+id/btn_put_request"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PUT"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_request_body"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="请求体 (JSON格式)"
                    android:text='{"key": "value", "name": "Android学习"}'
                    android:gravity="top"
                    android:inputType="textMultiLine" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 响应结果显示区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="响应结果"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_response_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="状态码：未请求"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_response_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="响应时间：-"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="响应头："
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_response_headers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="暂无响应头信息"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:background="@color/design_default_color_background"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="响应体："
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <TextView
                        android:id="@+id/tv_response_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="暂无响应体内容"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:background="@color/design_default_color_background"
                        android:padding="8dp" />

                </ScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Retrofit API测试区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Retrofit API测试"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_test_jsonplaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="测试 JSONPlaceholder API"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_test_github_api"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="测试 GitHub API"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_api_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="API测试结果将在这里显示"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:background="@color/design_default_color_background"
                    android:padding="8dp"
                    android:maxLines="10"
                    android:scrollbars="vertical" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
