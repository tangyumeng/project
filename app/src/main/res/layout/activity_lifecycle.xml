<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity生命周期演示"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="观察Logcat和Toast消息来了解Activity生命周期的变化：\n\n1. 启动应用 - onCreate, onStart, onResume\n2. 按Home键 - onPause, onStop\n3. 重新打开应用 - onRestart, onStart, onResume\n4. 按返回键 - onPause, onStop, onDestroy"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.5" />

    <Button
        android:id="@+id/btn_start_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动后台服务"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btn_send_broadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送自定义广播"
        android:layout_marginTop="16dp" />

</LinearLayout>
