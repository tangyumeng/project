<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".ServiceComparisonActivity">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="startService vs bindService"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp"
        android:elevation="2dp" />

    <!-- Service状态显示 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service状态"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_service_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service状态信息"
                android:textSize="11sp"
                android:textColor="#666666"
                android:fontFamily="monospace"
                tools:text="启动状态: 未启动\n绑定状态: 未绑定" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="生命周期"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_lifecycle_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="生命周期状态"
                android:textSize="11sp"
                android:textColor="#666666"
                android:fontFamily="monospace"
                tools:text="onCreate: 未调用\nonBind: 未调用" />

        </LinearLayout>

    </LinearLayout>

    <!-- 操作按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service操作演示"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <!-- startService操作 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_start_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="startService"
                android:textColor="@android:color/white"
                android:background="#4CAF50"
                android:layout_marginEnd="4dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_stop_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="stopService"
                android:textColor="@android:color/white"
                android:background="#F44336"
                android:layout_marginStart="4dp"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- bindService操作 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_bind_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="bindService"
                android:textColor="@android:color/white"
                android:background="#FF9800"
                android:layout_marginEnd="4dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_unbind_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="unbindService"
                android:textColor="@android:color/white"
                android:background="#9C27B0"
                android:layout_marginStart="4dp"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 服务交互 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_get_service_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="获取服务数据"
                android:textColor="@android:color/white"
                android:background="#795548"
                android:layout_marginEnd="4dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_lifecycle_comparison"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="生命周期对比"
                android:textColor="@android:color/white"
                android:background="#607D8B"
                android:layout_marginStart="4dp"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_usage_scenarios"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="使用场景"
                android:textColor="@android:color/white"
                android:background="#FF5722"
                android:layout_marginEnd="4dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_async_solutions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="异步方案"
                android:textColor="@android:color/white"
                android:background="#3F51B5"
                android:layout_marginStart="4dp"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清空结果"
            android:textColor="@android:color/white"
            android:background="#424242"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- 结果显示区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="演示结果"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:padding="16dp"
            android:background="#F0F0F0" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/tv_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#333333"
                android:lineSpacingExtra="3dp"
                android:fontFamily="monospace"
                android:text=""
                tools:text="这里会显示Service对比演示结果..." />

        </ScrollView>

    </LinearLayout>

    <!-- 底部提示 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💡 提示：观察Logcat输出可以看到详细的Service生命周期日志"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="#E8F5E8" />

</LinearLayout>
