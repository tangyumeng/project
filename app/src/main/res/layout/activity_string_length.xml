<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".StringLengthActivity">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="String.length()原理详解"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp"
        android:elevation="2dp" />

    <!-- 操作按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="核心原理演示"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_internal_structure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="内部结构"
                android:textColor="@android:color/white"
                android:background="#FF9800"
                android:layout_marginEnd="4dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_length_implementation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="实现机制"
                android:textColor="@android:color/white"
                android:background="#4CAF50"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_encoding_effect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="编码影响"
                android:textColor="@android:color/white"
                android:background="#9C27B0"
                android:layout_marginStart="4dp"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_performance_analysis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="性能分析"
                android:textColor="@android:color/white"
                android:background="#FF5722"
                android:layout_marginEnd="4dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_comparison_demo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="对比分析"
                android:textColor="@android:color/white"
                android:background="#795548"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清空结果"
                android:textColor="@android:color/white"
                android:background="#607D8B"
                android:layout_marginStart="4dp"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 结果显示区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="演示结果"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:padding="16dp"
            android:background="#F0F0F0" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/tv_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#333333"
                android:lineSpacingExtra="3dp"
                android:fontFamily="monospace"
                android:text=""
                tools:text="这里会显示演示结果..." />

        </ScrollView>

    </LinearLayout>

    <!-- 底部提示 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💡 提示：String.length()是Java中最高效的字符串操作之一"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="#E3F2FD" />

</LinearLayout>
