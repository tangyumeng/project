<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8F9FA">

    <!-- Fragment标题 -->
    <TextView
        android:id="@+id/tv_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="接口回调演示Fragment"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:gravity="center"
        android:padding="8dp"
        android:background="@android:color/white"
        android:layout_marginBottom="12dp" />

    <!-- 数据显示 -->
    <TextView
        android:id="@+id/tv_fragment_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="接收的数据: 演示数据"
        android:textSize="14sp"
        android:textColor="#333333"
        android:padding="8dp"
        android:background="@android:color/white"
        android:layout_marginBottom="12dp"
        tools:text="接收的数据: 演示数据" />

    <!-- 操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_send_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发送数据"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"
            android:background="#4CAF50"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_request_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="请求保存"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="#FF9800"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_request_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="请求删除"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            android:background="#F44336"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_send_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送错误信息"
        android:textSize="12sp"
        android:background="#9C27B0"
        android:textColor="@android:color/white" />

    <!-- 说明文字 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击按钮演示Fragment通过接口回调向Activity发送不同类型的消息"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:background="#E3F2FD" />

</LinearLayout>
