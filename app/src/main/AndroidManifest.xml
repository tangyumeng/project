<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 权限声明 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 网络协议学习相关权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project"
        tools:targetApi="31">
        
        <!-- 主Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Project">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity生命周期演示 -->
        <activity
            android:name=".LifecycleActivity"
            android:exported="true"
            android:label="Activity生命周期演示" />

        <!-- ContentProvider测试Activity -->
        <activity
            android:name=".ContentProviderTestActivity"
            android:exported="true"
            android:label="ContentProvider演示" />

        <!-- BroadcastReceiver测试Activity -->
        <activity
            android:name=".BroadcastTestActivity"
            android:exported="true"
            android:label="BroadcastReceiver测试" />

        <!-- 网络协议学习Activity -->
        <activity
            android:name=".NetworkProtocolActivity"
            android:exported="true"
            android:label="网络协议学习" />

        <!-- HTTP协议示例Activity -->
        <activity
            android:name=".HttpProtocolActivity"
            android:exported="true"
            android:label="HTTP协议示例" />

        <!-- TCP/UDP协议示例Activity -->
        <activity
            android:name=".SocketProtocolActivity"
            android:exported="true"
            android:label="TCP/UDP Socket示例" />

        <!-- WebSocket协议示例Activity -->
        <activity
            android:name=".WebSocketActivity"
            android:exported="true"
            android:label="WebSocket协议示例" />

        <!-- 深拷贝vs浅拷贝演示Activity -->
        <activity
            android:name=".CopyDemoActivity"
            android:exported="true"
            android:label="深拷贝vs浅拷贝演示" />

        <!-- 性能优化策略演示Activity -->
        <activity
            android:name=".PerformanceOptimizationActivity"
            android:exported="true"
            android:label="性能优化策略演示" />

        <!-- Service组件 -->
        <service
            android:name=".DemoService"
            android:enabled="true"
            android:exported="false" />

        <!-- BroadcastReceiver组件 -->
        <receiver
            android:name=".DemoBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <!-- 自定义广播和一些系统广播 -->
            <intent-filter android:priority="1000">
                <action android:name="com.modelbest.project.CUSTOM_BROADCAST" />
                <action android:name="android.intent.action.BATTERY_LOW" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            
            <!-- 应用包相关广播需要单独的intent-filter -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- ContentProvider组件 -->
        <provider
            android:name=".DemoContentProvider"
            android:authorities="com.modelbest.project.provider"
            android:enabled="true"
            android:exported="true"
            android:readPermission="android.permission.READ_EXTERNAL_STORAGE"
            android:writePermission="android.permission.WRITE_EXTERNAL_STORAGE" />

        <receiver android:name=".CustomReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="TODO"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.modelbest.project.MY_BROADCAST"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>