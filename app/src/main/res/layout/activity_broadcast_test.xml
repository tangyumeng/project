<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BroadcastReceiver测试"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态信息显示区域"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btn_send_custom_broadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送自定义广播"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_send_local_broadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送本地广播"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_send_ordered_broadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送有序广播"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_simulate_battery_low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="模拟电池电量低"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_test_screen_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试屏幕开关广播"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 广播类型说明：\n\n• 普通广播：并行发送，所有接收器同时收到\n• 有序广播：按优先级顺序发送，可以被拦截\n• 本地广播：仅在应用内传播，更安全\n• 系统广播：由系统发送的广播事件\n\n🔍 调试提示：\n• 观察Logcat输出（标签：DemoBroadcastReceiver）\n• 注意Toast消息提示\n• 某些广播需要相应权限"
            android:textSize="12sp"
            android:lineSpacingMultiplier="1.4"
            android:background="#E3F2FD"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>

